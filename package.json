{
  "private": true,
  "name": "preact-typescript-template",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' || stylelint '**/*.scss'",
    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix || stylelint '**/*.scss' --fix",
    "test": "jest ./src",
    "test:watch": "jest ./src --watch",
    "test:coverage": "jest ./src --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "dependencies": {
    "preact": "^10.3.1",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.2.0",
    "@testing-library/preact": "^2.0.0",
    "@testing-library/preact-hooks": "^1.0.6",
    "@types/jest": "^26.0.10",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^26.3.0",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.1",
    "jest": "^26.4.2",
    "jest-preset-preact": "^4.0.2",
    "lint-staged": "^10.0.7",
    "node-sass": "^4.14.1",
    "preact-cli": "^3.0.1",
    "preact-jsx-chai": "^2.3.2",
    "prettier": "^1.19.1",
    "sass-loader": "^9.0.2",
    "sirv-cli": "^1.0.0-next.3",
    "stylelint": "^13.6.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.0.2"
  }
}
